# Staging Environment Configuration
# Multi-Tenant Laravel Application with Vue.js Frontend
# Similar to production but with some debugging enabled

APP_NAME="Alumni Platform (Staging)"
APP_ENV=staging
APP_KEY=${APP_KEY_STAGING}
APP_DEBUG=true
APP_TIMEZONE=UTC
APP_URL=https://staging.your-domain.com
APP_VERSION=2.0.0-dev

# Logging more verbose for staging
LOG_LEVEL=info

# Allow some debugging features
TELESCOPE_ENABLED=true
DEBUGBAR_ENABLED=true

# Less strict security for staging
CSP_ENABLED=false
HSTS_ENABLED=false

# Import main production config and override staging values
# (This would be your main staging environment file)
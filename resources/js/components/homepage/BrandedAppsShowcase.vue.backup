<script setup lang="ts">
import { ref, computed } from 'vue'
import type { BrandedAppsShowcaseProps, BrandedApp } from '@/types/homepage'

// Props
const props = withDefaults(defineProps<BrandedAppsShowcaseProps>(), {
  featuredApps: () => [],
  customizationOptions: () => [],
  appStoreIntegration: () => ({
    appleAppStore: true,
    googlePlayStore: true,
    customDomain: true,
    whiteLabel: true,
    institutionBranding: true,
    reviewManagement: true,
    analyticsIntegration: true
  }),
  developmentTimeline: () => ({
    phases: [],
    totalDuration: '12-16 weeks',
    estimatedCost: 'Contact for quote',
    maintenanceCost: '$500-2000/month'
  })
})

// Emits
const emit = defineEmits<{
  demoRequest: []
  caseStudiesDownload: []
  appStoreClick: [appId: string, platform: 'ios' | 'android']
  screenshotView: [appId: string, screenshotId: string]
}>()

// Reactive state
const screenshotModal = ref<{
  isOpen: boolean
  app: BrandedApp | null
  currentIndex: number
}>({
  isOpen: false,
  app: null,
  currentIndex: 0
})

// Methods
const formatMetricValue = (value: number, unit: string): string => {
  switch (unit) {
    case 'percentage':
      return `${value}%`
    case 'minutes':
      return `${value}m`
    case 'count':
      return formatNumber(value)
    default:
      return value.toString()
  }
}

const formatNumber = (num: number): string => {
  if (num >= 1000000) {
    return `${(num / 1000000).toFixed(1)}M`
  } else if (num >= 1000) {
    return `${(num / 1000).toFixed(1)}K`
  }
  return num.toString()
}

const getCategoryIcon = (category: string) => {
  const icons = {
    branding: 'svg',
    features: 'svg', 
    integrations: 'svg',
    analytics: 'svg'
  }
  
  // Return a simple div for now - in a real app you'd use proper icon components
  return 'div'
}

const openScreenshotModal = (app: BrandedApp, index: number) => {
  screenshotModal.value = {
    isOpen: true,
    app,
    currentIndex: index
  }
  
  if (app.screenshots[index]) {
    emit('screenshotView', app.id, app.screenshots[index].id)
  }
}

const closeScreenshotModal = () => {
  screenshotModal.value = {
    isOpen: false,
    app: null,
    currentIndex: 0
  }
}

const trackAppStoreClick = (appId: string, platform: 'ios' | 'android') => {
  emit('appStoreClick', appId, platform)
}

const requestDemo = () => {
  emit('demoRequest')
}

const downloadCaseStudies = () => {
  emit('caseStudiesDownload')
}
</script>


# Production Environment Configuration for Homepage Deployment

APP_NAME="Alumni Platform"
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_TIMEZONE=UTC
APP_URL=https://your-domain.com
APP_VERSION=2.0.0

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=alumni_platform_production
DB_USERNAME=
DB_PASSWORD=

# Cache Configuration
CACHE_STORE=redis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=
REDIS_PORT=6379

# Session Configuration
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=true
SESSION_PATH=/
SESSION_DOMAIN=.your-domain.com

# Queue Configuration
QUEUE_CONNECTION=redis

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@your-domain.com
MAIL_FROM_NAME="${APP_NAME}"

# Homepage Deployment Configuration
HOMEPAGE_DEPLOYMENT_ENABLED=true

# SSL Configuration
SSL_ENABLED=true
SSL_CERTIFICATE_PATH=/etc/ssl/certs/your-domain.crt
SSL_PRIVATE_KEY_PATH=/etc/ssl/private/your-domain.key
FORCE_HTTPS=true

# Security Headers Configuration
HSTS_ENABLED=true
HSTS_MAX_AGE=31536000
HSTS_INCLUDE_SUBDOMAINS=true
HSTS_PRELOAD=true

CSP_ENABLED=true
CSP_POLICY="default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://www.google-analytics.com https://www.googletagmanager.com; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: https:; connect-src 'self' https://www.google-analytics.com;"

X_FRAME_OPTIONS=DENY
X_CONTENT_TYPE_OPTIONS=nosniff
X_XSS_PROTECTION="1; mode=block"
REFERRER_POLICY=strict-origin-when-cross-origin

# Performance Configuration
CACHE_STATIC_ASSETS=true
STATIC_CACHE_DURATION=31536000
GZIP_COMPRESSION=true
MINIFY_HTML=true

# Monitoring Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PATH=/health-check/homepage
PERFORMANCE_MONITORING_ENABLED=true
ERROR_TRACKING_ENABLED=true

# CDN Configuration
CDN_ENABLED=false
CDN_URL=
CDN_ASSETS_PATH=assets

# Database Migration Configuration
MIGRATION_TIMEOUT=300
BACKUP_BEFORE_MIGRATION=true

# Analytics Configuration
GOOGLE_ANALYTICS_ID=
GOOGLE_TAG_MANAGER_ID=

# Third-party Services
SENTRY_LARAVEL_DSN=https://5b2c3cb3a5eb423893d58842bbe71483@app1.genius2.mrmarkuz.ddnss.eu/1
BUGSNAG_API_KEY=

# File Storage
FILESYSTEM_DISK=s3
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Logging
LOG_CHANNEL=stack
LOG_STACK=single,slack
LOG_LEVEL=error
LOG_SLACK_WEBHOOK_URL=

# Broadcasting
BROADCAST_CONNECTION=pusher
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

# Deployment Secrets (Set in CI/CD)
DEPLOY_HOST=
DEPLOY_USER=
DEPLOY_KEY=
DEPLOY_PATH=
PRODUCTION_URL=